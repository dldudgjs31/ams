<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ams.teacher.model.dao.TeacherDao">
	<select id="listDao" resultType="com.ams.teacher.model.dto.TeacherDto">
		select * from a_teacher
	</select>
	<select id="selectOneDao" parameterType="String" resultType="com.ams.teacher.model.dto.TeacherDto">
		select * from a_teacher where t_id = #{t_id}
	</select>

	<update id="updatePass" parameterType="com.ams.teacher.model.dto.TeacherDto">
		update a_teacher set t_pwd = #{t_pwd} where t_id = #{t_id}
	</update>

	<insert id="insertDao" parameterType="com.ams.teacher.model.dto.TeacherDto">
		insert into a_teacher(t_id,t_pwd,t_pn,t_name)
		values(#{t_id},#{t_pwd},#{t_pn},#{t_name})
	</insert>

	<select id="checkIdDao" parameterType="String" resultType="Integer">
		select count(*) from a_teacher where t_id = #{t_id}
	</select>
</mapper>